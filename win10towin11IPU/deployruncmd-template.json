{
   "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {
      "location": {
         "type": "string",
         "defaultValue": "australiaeast"
      },
      "vmName": {
         "type": "string"
      },
      "downloadUrl": {
         "type": "string"
      },
      "scriptUri": {
         "type": "string"
      },
      "quiet": {
         "type": "bool",
         "defaultValue": false
      },
      "SkipFinalize": {
         "type": "bool",
         "defaultValue": false
      },
      "Finalize": {
         "type": "bool",
         "defaultValue": false
      },
      "ScanOnly": {
         "type": "bool",
         "defaultValue": false
      },
      "dynamicUpdate": {
         "type": "bool",
         "defaultValue": false
      }
   },
   "resources": [
      {
         "type": "Microsoft.Compute/virtualMachines/runCommands",
         "name": "[concat(parameters('vmName'),'/secondRunCommand')]",
         "apiVersion": "2023-03-01",
         "location": "[parameters('location')]",
         "properties": {
            "source": {
               "scriptUri": "[parameters('scriptUri')]"
            },
            "parameters": [
               {
                  "name": "downloadUrl",
                  "value": "[parameters('downloadUrl')]"
               },
               {
                  "name": "quiet",
                  "value": "[if(parameters('quiet'), '$true', json('null'))]"
               },
               {
                  "name": "scanonly",
                  "value": "[if(parameters('ScanOnly'), '$true', json('null'))]"
               },
               {
                  "name": "skipfinalize",
                  "value": "[if(parameters('SkipFinalize'), '$true', json('null'))]"
               },
               {
                  "name": "finalize",
                  "value": "[if(parameters('Finalize'), '$true', json('null'))]"
               },
               {
                  "name": "dynamicupdate",
                  "value": "[if(parameters('dynamicUpdate'), '$true', json('null'))]"
               }
            ],
            "timeoutInSeconds": 600
         }
      }
   ]
}

