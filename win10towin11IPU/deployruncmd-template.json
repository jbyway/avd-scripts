{
   "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {
      "location": {
         "type": "string"
      },
      "vmName": {
         "type": "string",
         "defaultValue": "vmName"
      },
      "downloadUrl": {
         "type": "string"
      },
      "scriptUri": {
         "type": "string"
      },
      "pstoolsdownloadurl": {
         "type": "string",
         "defaultValue": "https://download.sysinternals.com/files/PSTools.zip"
      },
      "quiet": {
         "type": "bool",
         "defaultValue": false
      },
      "SkipFinalize": {
         "type": "bool",
         "defaultValue": false
      },
      "Finalize": {
         "type": "bool",
         "defaultValue": false
      },
      "ScanOnly": {
         "type": "bool",
         "defaultValue": false
      },
      "dynamicUpdate": {
         "type": "bool",
         "defaultValue": false
      },
      "upgradenow": {
         "type": "bool",
         "defaultValue": false
      },
      "outputBlobUri": {
         "type": "string"
      },
      "outputBlobError": {
         "type": "string"
      }
   },
   "resources": [
      {
         "type": "Microsoft.Compute/virtualMachines/runCommands",
         "name": "[concat(parameters('vmName'),'/secondRunCommand')]",
         "apiVersion": "2023-03-01",
         "location": "[parameters('location')]",
         "properties": {
            "source": {
               "scriptUri": "[parameters('scriptUri')]"
            },
            "timeoutInSeconds": 3600,
            "outputBlobUri": "[parameters('outputBlobUri')]",
            "outputBlobError": "[parameters('outputBlobError')]",
            "treatFailureAsDeploymentFailure": true,
            "parameters": [
               {
                  "name": "downloadUrl",
                  "value": "[parameters('downloadUrl')]"
               },
               {
                  "name": "pstoolsdownloadurl",
                  "value": "[parameters('pstoolsdownloadurl')]"
               },
               {
                  "name": "quiet",
                  "value": "[parameters('quiet')]"
               },
               {
                  "name": "scanonly",
                  "value": "[parameters('ScanOnly')]"
               },
               {
                  "name": "skipfinalize",
                  "value": "[parameters('SkipFinalize')]"
               },
               {
                  "name": "finalize",
                  "value": "[parameters('Finalize')]"
               },
               {
                  "name": "dynamicupdate",
                  "value": "[parameters('dynamicUpdate')]"
               },
               {
                  "name": "upgradenow",
                  "value": "[parameters('upgradenow')]"
               },
               {
                  "name": "outputBlobUri",
                  "value": "[parameters('outputBlobUri')]"
               },
               {
                  "name": "outputBlobError",
                  "value": "[parameters('outputBlobError')]"
               }
            ]
         }
      }
   ]
}